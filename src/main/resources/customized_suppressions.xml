<suppressions>

<!--    <suppress checks="MissingJavadocMethod" files=".*" />-->
<!--    <suppress checks="MissingJavadocType" files=".*" />-->
    <suppress checks=".*" files="ESAPI.properties" />

    <!-- Goes against intelliJ commenting style
    Ref: https://stackoverflow.com/questions/56792141/checkstyle-comments -->
    <suppress checks="CommentsIndentation" files=".*" />

    <!-- Commented following because we are all using intelliJ auto import
    and the following checks do not understand the separation between groups -->
    <suppress checks="CustomImportOrder" files=".*" />

    <!-- Commenting this because it expects operators like + to start in a new line which looks worse -->
    <suppress checks="OperatorWrap" files=".*" />


</suppressions>
